@{
    ViewData["Title"] = "Thanh toán";
}

<div class="container mt-4">
    <h2 class="mb-4 fw-bold"><i class="bi bi-cart-check"></i> Thanh toán</h2>
    
    <div class="row">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h5><i class="bi bi-truck"></i> Thông tin giao hàng</h5>
                </div>
                <div class="card-body">
                    <form id="checkoutForm">
                        <div class="mb-3">
                            <label class="form-label">Họ và tên người nhận</label>
                            <input type="text" class="form-control" id="recipientName" required>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Số điện thoại</label>
                            <input type="tel" class="form-control" id="phone" required>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Địa chỉ giao hàng</label>
                            <textarea class="form-control" id="shippingAddress" rows="3" required></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label class="form-label">Phương thức thanh toán</label>
                            <select class="form-select" id="paymentMethod">
                                <option value="COD">Thanh toán khi nhận hàng (COD)</option>
                                <option value="Bank">Chuyển khoản ngân hàng</option>
                            </select>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5>Tóm tắt đơn hàng</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.Cart != null && ((List<Cart>)ViewBag.Cart).Any())
                    {
                        <ul class="list-group mb-3">
                            @foreach (var item in (List<Cart>)ViewBag.Cart)
                            {
                                <li class="list-group-item d-flex justify-content-between">
                                    <span>@item.Product?.ProductName x @item.Quantity</span>
                                    <strong>@((item.Product?.Price * item.Quantity ?? 0).ToString("N0")) ₫</strong>
                                </li>
                            }
                        </ul>
                        <hr>
                        <div class="d-flex justify-content-between mb-3">
                            <strong>Tổng tiền:</strong>
                            <strong class="text-danger fs-4">@(((List<Cart>)ViewBag.Cart).Sum(item => item.Product?.Price * item.Quantity ?? 0).ToString("N0")) ₫</strong>
                        </div>
                        <button class="btn btn-primary btn-lg w-100" onclick="confirmOrder()">
                            <i class="bi bi-check-circle"></i> Xác nhận đặt hàng
                        </button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
<script>
function confirmOrder() {
    const recipientName = document.getElementById('recipientName').value;
    const phone = document.getElementById('phone').value;
    const shippingAddress = document.getElementById('shippingAddress').value;
    
    if (!recipientName || !phone || !shippingAddress) {
        alert('Vui lòng điền đầy đủ thông tin!');
        return;
    }
    
    fetch('@Url.Action("CreateOrder")', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify({ recipientName, phone, shippingAddress })
    })
    .then(r => r.json())
    .then(data => {
        if(data.success) {
            alert('Đặt hàng thành công!');
            window.location.href = '@Url.Action("History")';
        } else {
            alert('Đặt hàng thất bại: ' + (data.message || 'Vui lòng thử lại.'));
        }
    })
    .catch(error => {
        console.error('Checkout error:', error);
        alert('Có lỗi xảy ra khi đặt hàng!');
    });
}
</script>
}
